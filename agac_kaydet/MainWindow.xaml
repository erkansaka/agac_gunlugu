<Window x:Class="WpfTreeCommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tree Command" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gönderen Email:" Grid.Row="0" Margin="10"/>
        <TextBox x:Name="txtSenderEmail" Grid.Row="1" Margin="10"/>

        <TextBlock Text="Gönderen Password:" Grid.Row="2" Margin="10"/>
        <PasswordBox x:Name="txtSenderPassword" Grid.Row="3" Margin="10"/>

        <TextBlock Text="Alıcı Email:" Grid.Row="4" Margin="10"/>
        <TextBox x:Name="txtReceiverEmail" Grid.Row="5" Margin="10"/>

        <Button Content="Gönder" Grid.Row="6" Margin="10" Click="myButton_Click"/>
        <TextBlock Text="Gönderen emaili smtp için uygun olmalıdır." Grid.Row="6" Margin="10,35,10,-15"/>
    </Grid>
</Window>
